pipeline {
    agent any

    triggers {
        pollSCM('* * * * *')  // Revisa cada minuto si hay nuevos commits (puedes cambiarlo)
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/PPS10684987/PPS-24-25.git'
            }
        }

        stage('Test') {
            steps {
                sh 'python3 -m unittest PPS-24-25/RA5/RA5_1_JENKINS/Tarea_1_2_Github/codigo/test_calculator.py'
            }
        }
    }

    post {
        success {
            echo 'Pruebas completadas correctamente.'
        }
        failure {
            echo 'Error en las pruebas.'
        }
    }
}
